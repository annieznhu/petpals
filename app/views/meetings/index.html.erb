<div class=main-container>
    <% if @today_meetings.any? %>
        <h1 class="title-meetings-index">Balades du jour</h1>
        <div class= 'time-container'>
            <% @today_meetings.each do |meeting| %>
            <div class='card-meeting'>
                <% if meeting.dog == current_user.dog%>
                    <%= cl_image_tag meeting.second_dog.photos.first.key, width: 100, height: 100, crop: :fill, class: "meeting-dog-image"%>
                <% else %>
                    <%= cl_image_tag meeting.dog.photos.first.key, width: 100, height: 100, crop: :fill, class: "meeting-dog-image"%>
                <% end %>
                <div class='card-infos'>
                    <% if meeting.dog == current_user.dog%>
                    <h2><%= meeting.second_dog.name %></h2>
                    <% else %>
                        <h2><%= meeting.dog.name %></h2>
                    <% end %>
                    <p> <%= meeting.place.name %></p>
                    <p>Le <%= l(meeting.date, format: "%a %e %b") %></p>
                </div>
            </div>
            <% end %>
        </div>
    <% end %>

    <% if @future_meetings.any? %>
        <h1 class="title-meetings-index">Balades à venir</h1>
        <div class= 'time-container'>
            <% @future_meetings.each do |meeting| %>
            <div class='card-meeting'>
                <% if meeting.dog == current_user.dog%>
                    <%= cl_image_tag meeting.second_dog.photos.first.key, width: 100, height: 100, crop: :fill, class: "meeting-dog-image"%>
                <% else %>
                    <%= cl_image_tag meeting.dog.photos.first.key, width: 100, height: 100, crop: :fill, class: "meeting-dog-image"%>
                <% end %>
                <div class='card-infos'>
                    <h2><%= meeting.second_dog.name %></h2>
                    <p><%= meeting.place.name %></p>
                    <p>Le <%= l(meeting.date, format: "%a %e %b") %></p>
                </div>
            </div>
            <% end %>
        </div>
    <% end %>

    <% if @past_meetings.any? %>
        <h1 class="title-meetings-index">Balades passées</h1>
        <div class= 'time-container'>
            <% @past_meetings.each do |meeting| %>
            <div class='card-meeting'>
                <% if meeting.dog == current_user.dog%>
                    <%= cl_image_tag meeting.second_dog.photos.first.key, width: 100, height: 100, crop: :fill, class: "meeting-dog-image"%>
                <% else %>
                    <%= cl_image_tag meeting.dog.photos.first.key, width: 100, height: 100, crop: :fill, class: "meeting-dog-image"%>
                <% end %>
                <div class='card-infos'>
                    <h2><%= meeting.second_dog.name %></h2>
                    <p> <%= meeting.place.name %></p>
                    <p>Le <%= l(meeting.date, format: "%a %e %b") %></p>

                </div>
            </div>
            <% end %>
        </div>
    <% end %>
</div>
